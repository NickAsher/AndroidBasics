<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Request StringRequest"
        android:textAllCaps="false"
        android:onClick="sendGetRequest_StringRequest"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Request JSON Request"
        android:textAllCaps="false"
        android:onClick="sendGetRequest_JSONRequest"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Request ImageRequest"
        android:textAllCaps="false"
        android:onClick="sendGetRequest_ImageRequest"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Request String Request"
        android:textAllCaps="false"
        android:onClick="sendPostRequest_StringRequest"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Request Json Request"
        android:textAllCaps="false"
        android:onClick="sendPostRequest_JsonRequest"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Request Image Request"
        android:textAllCaps="false"
        android:onClick="sendPostRequest_ImageRequest"
        />




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:background="#ddd"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status TextView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityMain_Textview_Status"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityMain_ImageView_Status"
            android:layout_marginTop="16dp"
            />


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>